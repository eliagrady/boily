{
  "name": "boily",
  "version": "3.0.1",
  "description": "ES2015 boilerplate for creating libraries with the newest front-end technologies.",
  "main": "dist/boily.js",
  "scripts": {
    "clean": "rimraf coverage/ dist/",
    "test": "npm run test:browser && npm run test:server && npm run coverage",
    "test:server": "gulp test:server",
    "browser": "gulp browser",
    "watch": "gulp watch",
    "build": "npm run build:dev && npm run build:prod",
    "build:dev": "gulp build:dev",
    "build:prod": "gulp build:prod",
    "build:common": "gulp build:commin",
    "build:es6": "gulp build:es6",
    "build:closure": "gulp build:closure",
    "coverage": "gulp coverage",
    "test:browser": "karma start config/karma.conf.js --no-auto-watch",
    "karma:phantom": "gulp KarmaPhantomJS",
    "karma:chrome": "gulp KarmaChrome",
    "karma:firefox": "gulp KarmaFirefox",
    "karma:ie": "karma start config/karma.conf.js --single-run --no-auto-watch --browsers=IE",
    "lint": "npm run lint:source && npm run lint:tests",
    "lint:tests": "eslint ./src/**/*__tests__*/**/*.js",
    "lint:source": "eslint src",
    "watch:server": "gulp watch:server",
    "watch:browser": "karma start config/karma.conf.js --auto-watch --no-single-run",
    "watch:phantom": "gulp watch:phantom",
    "watch:chrome": "gulp watch:chrome",
    "watch:firefox": "gulp watch:firefox",
    "packages": "npm list --depth=0",
    "package:purge": "rm -rf node_modules",
    "package:reinstall": "npm run package:purge && npm install",
    "package:check": "ncu",
    "package:upgrade": "ncu -u",
    "package:prod": "ncu -u",
    "package:dev": "ncu -p -u",
    "postpublish": "git push origin master --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kflash/boily"
  },
  "author": "Kenny F.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kflash123/boily/issues"
  },
  "homepage": "https://github.com/kflash123/boily",
  "jsnext:main": "src/index.js",
  "keywords": [
    "boilerplate",
    "es2015",
    "rollup",
    "rewire",
    "karma",
    "mocha",
    "workflow",
    "babel",
    "es6",
    "isparta",
    "rimraf",
    "gulp",
    "livereload",
    "chai",
    "sinon",
    "webpack",
    "eslint",
    "bundle",
    "modules"
  ],
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.4",
    "babel-register": "^6.7.2",
    "babel-core": "^6.7.4",
    "babel-plugin-rewire": "^1.0.0-rc-2",
    "babel-plugin-syntax-object-rest-spread": "^6.5.0-1",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0-1",
    "babel-plugin-syntax-jsx": "^6.5.0-1",
    "babel-plugin-syntax-flow": "^6.5.0-1",
    "babel-plugin-transform-flow-strip-types": "^6.7.0",
    "babel-plugin-transform-inline-environment-variables": "^6.5.0",
    "babel-plugin-transform-remove-debugger": "^6.5.0-1",
    "babel-plugin-transform-remove-console": "^6.5.0-1",
    "babel-plugin-transform-undefined-to-void": "^6.5.0-1",
    "babel-plugin-transform-object-assign": "^6.5.0-1",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-eslint": "^2.0.0",
    "gulp-filter": "^4.0.0",
    "gulp-istanbul": "^0.10.3",
    "gulp-livereload": "^3.8.1",
    "gulp-load-plugins": "^1.2.0",
    "gulp-mocha": "^2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-replace": "^0.5.4",
    "gulp-util": "^3.0.7",
    "gulp-coveralls": "^0.1.4",
    "isparta": "^4.0.0",
    "json-loader": "^0.5.3",
    "mocha": "^2.4.5",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "phantomjs-prebuilt": "^2.1.7",
    "vinyl-source-stream": "^1.1.0",
    "vinyl-buffer": "^1.0.0",
    "karma-chrome-launcher": "^0.2.3",
    "karma-firefox-launcher": "^0.1.7",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-mocha": "^0.2.2",
    "karma-mocha-reporter": "^2.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma": "0.13.22",
    "karma-coverage": "^0.5.5",
    "karma-coveralls": "^1.1.2",
    "karma-chai-as-promised": "^0.1.2",
    "karma-sinon": "^1.0.4",
    "karma-sinon-chai": "^1.2.0",
    "karma-webpack": "^1.7.0",
    "karma-spec-reporter": "0.0.25",
    "karma-chai": "^0.1.0",
    "karma-ie-launcher": "^0.2.0",
    "karma-rollup-preprocessor": "^2.0.1",
    "rollup": "^0.25.7",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-node-resolve": "^1.5.0",
    "rollup-plugin-replace": "^1.1.0",
    "rollup-plugin-uglify": "^0.3.1",
    "rollup-plugin-filesize": "^0.2.1",
    "rollup-plugin-eslint": "^2.0.0",
    "rollup-plugin-typescript": "^0.6.1",
    "rollup-plugin-stub": "^1.1.0",
    "webpack-stream": "^3.1.0",
    "webpack": "^2.1.0-beta.4",
    "glob": "^7.0.3",
    "pre-commit": "^1.1.2",
    "mkdirp": "^0.5.1",
    "npmlog": "^2.0.3",
    "del": "^2.2.0",
    "rimraf": "^2.5.2",
    "npm-check-updates": "^2.6.1",
    "cross-env": "1.0.7",
    "dotenv": "^2.0.0"
  }
}
